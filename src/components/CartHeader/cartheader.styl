.wrap
  position relative
  .cartHeader
    background: white;
    display flex
    height 50px
    line-height 50px
    border-bottom 1px white solid
    .icon-back
      position absolute
      left 5px
      font-size 22px
    div
      margin 0 auto
      font-size 17px
    .icon-quanbu-copy
      position absolute
      right 5px
      font-size 25px

  .nav-bar
    width 100%
    height 70px
    display flex
    border-bottom 1px #eee solid
    justify-content space-around
    background #fff
    overflow hidden
    &.fade-enter, &.fade-leave-to
      height 0
    &.fade-enter-active, &.fade-leave-active
      transition height .5s
    .nav-item
      display flex
      flex-direction column
      text-align center
      justify-content center
      color #666
      .iconfont
        font-size 22px
      .desc-text
        font-size 14px
        margin 3px 0
