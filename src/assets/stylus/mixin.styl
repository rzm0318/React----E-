$color = #459d36
$bcolor = #9e9e9e

border-bottom-1px($color)
  position relative
  &::before
    content ''
    display block
    height 1px
    position absolute
    bottom 0
    left 0
    right 0
    background $color

border-top-1px($color)
  position relative
  &::before
    content ''
    display block
    height 1px
    position absolute
    top 0
    left 0
    right 0
    background $color

border-right-1px($color)
  position relative
  &::after
    content ''
    display block
    width 1px
    position absolute
    right 0
    top 0
    bottom 0
    background $color

border-left-1px($color)
  position relative
  &::after
    content ''
    display block
    width 1px
    position absolute
    left 0
    top 0
    bottom 0
    background $color

border-1px($color)
  position relative
  &::before
    content ''
    display block
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    border 1px solid $color
    box-sizing border-box

@media only screen and (-webkit-device-pixel-ratio: 2)
  .border-left-1px
    &::after
      transform scaleX(.5)
  .border-right-1px
    &::after
      transform scaleX(.5)
  .border-top-1px
    &::before
      transform scaleY(.5)
  .border-bottom-1px
    &::before
      transform scaleY(.5)
  .border-1px
    &::before
      width 200%
      height 200%
      transform-origin 0 0
      transform scale(.5)
@media only screen and (-webkit-device-pixel-ratio: 3)
  .border-left-1px
    &::after
      transform scaleX(.333333)
  .border-right-1px
    &::after
      transform scaleX(.333333)
  .border-top-1px
    &::before
      transform scaleY(.333333)
  .border-bottom-1px
    &::before
      transform scaleY(.333333)
  .border-1px
    &::before
      width 300%
      height 300%
      transform-origin 0 0
      transform scale(.333333333)
