.tab
  background: white
  line-height 40px
  height 40px
  position fixed
  left 0
  right 0
  top 0
  z-index 111
  border-bottom #dbd8db 1px solid
  .tab-item1
    width 40%
    float left
    text-align right
    .title
      color #0d0e0e
      font-size bold
  .tab-item2
    float right
    width 40%
    .title
      color #0d0e0e
      font-size bold
  .search
    position absolute
    top 5px
    right 10px
    width 20px
    height 20px
    img
      width 100%


