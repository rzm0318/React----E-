            margin-left 5px
            .icon
              width 8px
              height 8px
            span
              color #898989
              font-size 14px
              line-height 25px
              vertical-align middle
          .search
            background #e9e9e9
            border-radius 4px
            text-indent 10px
            font-size 13px
            line-height 25px
            input
              width 220px
              background #e9e9e9
            .icon
              width 11px
              height 11px
          img
            width 25px
            height 25px


